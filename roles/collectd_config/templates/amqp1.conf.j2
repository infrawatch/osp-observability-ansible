LoadPlugin amqp1

<Plugin amqp1>
  <Transport "metrics">
    Host "{{ collectd_host }}"
    Port "{{ collectd_port }}"
    Address "collectd"
    RetryDelay 1
    <Instance "openshift-notify">
        Format JSON
        PreSettle false
        Notify true
    </Instance>
    <Instance "openshift-telemetry">
        Format JSON
        PreSettle false
    </Instance>
  </Transport>
</Plugin>
